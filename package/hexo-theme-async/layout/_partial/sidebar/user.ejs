<!-- card header -->
<div class="trm-mc-header">
    <div class="trm-avatar-frame trm-mb-20">
        <%- swich_imgs([theme.user.avatar,theme.user.dark_avatar], {
            alt:"Avatar",
            class:"trm-avatar"
        }) %>
    </div>
    <h5 class="trm-name trm-mb-15">
        <%= theme.user.name %>
    </h5>
    <% if(theme?.sidebar?.typedText && Array.isArray(theme.sidebar.typedText) && theme.sidebar.typedText.length>0) { %>
    <div class="trm-label">
        <%= theme.sidebar.typedTextPrefix %>
        <span class="trm-typed-text">
            <!-- Words for theme.user.typedText -->
        </span>
    </div>
    <% } %>
</div>
<!-- card header end -->

<!-- sidebar social -->
<div class="trm-divider trm-mb-40 trm-mt-40"></div>
<% if(theme.sidebar.social) { %>
<div class="trm-social">
    <% theme.sidebar.social.forEach(item=>{ %>
        <a href="<%- url_for(item.url) %>" title="<%- item.name %>" rel="nofollow" target="_blank">
            <%- icon(item.icon) %>
        </a>
    <%})%>
</div>
<% } %>
<!-- sidebar social end -->

<!-- info -->
<div class="trm-divider trm-mb-40 trm-mt-40"></div>
<ul class="trm-table trm-mb-20">
    <% theme.sidebar.info.forEach(item=>{ %>
        <li>
            <div class="trm-label">
                <%- __(item.key) %>:
            </div>
            <div class="trm-label trm-label-light">
                <%- item.val %>
            </div>
        </li>
    <%})%>
</ul>
<% if(theme.user.email){ %>
<!-- info end -->
<div class="trm-divider trm-mb-40 trm-mt-40"></div>
<!-- action button -->
<div class="text-center">
    <a href="mailto:<%- theme.user.email %>" class="trm-btn">
        <%- __('sidebar.contact') %>
        <%- icon(theme.icons.email) %>
    </a>
</div>
<!-- action button end -->
<% } %>